---
import removeTrailingSlash from "../utils/removeTrailingSlash";
import presentation from "../data/presentation";
import Link from "../components/shared/Link.astro";
const pathname = removeTrailingSlash(Astro.url.pathname);
---

<header class="z-40 flex w-full flex-col gap-2 md:flex-row md:justify-between">
  <Link label={presentation.email} href={`mailto:${presentation.email}`} />

  <nav role="navigation">
    <ul role="list" class="flex flex-row gap-2">
      <li>
        <a
          href="/"
          class:list={{
            ["hover:text-orange-500"]: true,
            ["text-orange-500"]: pathname === "/",
          }}>Home</a
        >
      </li>
      <li>/</li>
      <li>
        <a href="/CV.pdf" download="/CV.pdf"> Download CV</a>
      </li>
      <li>/</li>
      <li>
        <div class="opacity-50">Posts</div>
      </li>
    </ul>
  </nav>
</header>
